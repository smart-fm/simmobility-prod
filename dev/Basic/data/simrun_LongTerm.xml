	<script name="tmdw" file="tmdw.lua"/> <!--Tour Mode/Destination Work -->
	<script name="tmds" file="tmds.lua"/> <!--Tour Mode/Destination Shopping -->
	<script name="tmdo" file="tmdo.lua"/> <!--Tour Mode/Destination Others -->                    
    </model_scripts>
</config>

