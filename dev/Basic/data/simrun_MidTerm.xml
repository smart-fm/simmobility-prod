                <dbname value="sim_mob_lt"/>
            </database>

            <database id="fm_hpchead_lt" dbtype="postgres">
                <host value="fmhpchead"/>
                <port value="5432"/>
                <dbname value="sim_mob_lt"/>
            </database>

            <database id="fm_hpchead_lt" dbtype="postgres">
                <host value="fmhpchead"/>
                <port value="5432"/>
                <dbname value="sim_mob_lt"/>
            </database>
            
            <!-- Variables stores for preday demand simulator-->
