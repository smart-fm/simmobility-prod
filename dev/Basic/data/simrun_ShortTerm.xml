			<!-- Distributions pertinent to driver reaction times -->
			<dist id="driver_react_1" type="lognormal"  mean="500"  stdev="100"/>
			<dist id="driver_react_2" type="lognormal"  mean="500"  stdev="100"/>
		</distributions>

